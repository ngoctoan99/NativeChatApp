<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Login Account"
        android:textColor="#CE0288D1"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editemailin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bgr_border_16"
        android:hint="Nhập email"
        android:padding="15dp"
        android:paddingStart="15dp"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/editpassin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editemailin"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bgr_border_16"
        android:hint="Nhập password "
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColorHint="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <androidx.cardview.widget.CardView
            android:id="@+id/btnin"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#CE0288D1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="LOGIN"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="15sp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nothaveac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gglogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Not have account. Register"
            android:textColor="@color/black" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/gglogin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/recover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nothaveac"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="Forget the password. Recover"
            android:textColor="@color/black" />
    </RelativeLayout>

</RelativeLayout>